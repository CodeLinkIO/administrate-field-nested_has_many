<div class="field-unit__label" style="text-transform: capitalize; align-self: baseline;">
  <%= f.label field.attribute_key, field.attribute %>
</div>
<div class="field-unit__field">
  <%= f.fields_for field.association_name do |nested_form| %>
    <%= render(
      partial: "fields/nested_has_many/fields",
      locals: {
        f: nested_form,
        field: field
      },
    ) %>
  <% end %>

  <div>
    <%= link_to_add_association(
      # TODO I18n
      "Add new #{field.associated_class_name.titleize}",
      f,
      field.association_name,
      partial: "fields/nested_has_many/fields",
      render_options: { locals: { field: field } },
    ) %>
  </div>
</div>
